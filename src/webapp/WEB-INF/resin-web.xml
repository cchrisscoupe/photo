<web-app>
	<!-- This will cause all jsps to compile when the webapp inits. -->
	<listener>
		<listener-class>com.caucho.jsp.JspPrecompileListener</listener-class>
		<init>
			<extension>jsp</extension>
		</init>
	</listener>
	<session-config>
		<file-store>WEB-INF/tmp/sessions</file-store>
		<always-save-session/>
	</session-config>
</web-app>
